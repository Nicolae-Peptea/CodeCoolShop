@model ViewModel

<form asp-area="" asp-controller="Product" asp-action="Index">
    <div class="sort-control-group">
        <div class="sort-control-item">
            <label for="sort_by_category">Sort by Category:</label>
            <select name="category">
                @if (Model.CurrentCategory == 0)
                {
                    <option value="0" selected>All</option>
                }
                else
                {
                    <option value="0">All</option>
                }
                @foreach (var category in Model.Categories)
                {
                    @if (Model.CurrentCategory == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>
        <div class="sort-control-item">
            <label for="sort_by_suppliers">Sort by Suppliers:</label>
            <select name="supplier">
                @if (Model.CurrentSupplier == 0)
                {
                    <option value="0" selected>All</option>
                }
                else
                {
                    <option value="0">All</option>
                }
                @foreach (var supplier in Model.Suppliers)
                {
                    @if (Model.CurrentSupplier == supplier.Id)
                    {
                        <option value="@supplier.Id" selected>@supplier.Name</option>
                    }
                    else
                    {
                        <option value="@supplier.Id">@supplier.Name</option>
                    }
                }
            </select>
        </div>

        <button name="sort" type="submit">Sort</button>
    </div>
</form>

