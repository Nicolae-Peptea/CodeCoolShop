{
  "Stripe": {
    "SecretKey": "",
    "PublishableKey": ""
  },
  "Sendgrid": {
    "ShopName": "CodeCool Shop",
    "SenderEmail": "",
    "ApiKey": "",
    "OrderConfirmationTemplateId": "",
    "AccountConfirmationTemplateId": ""
  },
  "ConnectionStrings": {
    "CodeCoolShop": ""
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Defaul": "Infomration",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.txt",
          "outputTemplate": "{Timestamp:G} [{Level:u3}] {Message} {NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  }
}
